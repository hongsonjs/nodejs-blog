<div class="mt-4">
    <div class="row">
        {{#each courses}}

        <div class="col-sm-6 col-lg-4 mt-4">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" 
                    src="{{this.image}}" 
                    alt="{{this.title}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <p class="card-text">{{this.desc}}</p>
                    <a href="#" class="btn btn-primary">Buy Course</a>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>